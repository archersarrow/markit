{
  "name": "markit",
  "version": "1.0.1",
  "productName": "MarkIt",
  "author": "Saketh kowtha",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saketh-kowtha/markit.git"
  },
  "main": "./src/electron/main.js",
  "scripts": {
    "dev": "next dev src/renderer",
    "clean": "rm -rf dist src/renderer/.next src/renderer/out",
    "test": "jest --maxWorkers=4",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "next build src/renderer && electron-builder --mac",
    "dist": "next build src/renderer",
    "release": "next build src/renderer && electron-builder --windows --linux --publish always"
  },
  "build": {
    "productName": "MarkIt",
    "publish": {
      "provider": "github",
      "repo": "markit",
      "owner": "saketh-kowtha",
      "protocol": "https",
      "private": "false",
      "releaseType": "release"
    },
    "mac": {
      "icon": "./images/logo.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Productivity",
      "icon": "./images/logo.png"
    },
    "win": {
      "icon": "./images/logo.ico"
    },
    "asar": true,
    "files": [
      "src/electron",
      "src/renderer/out"
    ]
  },
  "dependencies": {
    "codemirror": "^5.65.18",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.2.4",
    "electron-next": "^3.1.5",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "fuse.js": "^7.1.0",
    "html-to-image": "^1.11.13",
    "katex": "^0.16.23",
    "mermaid": "^11.12.0",
    "next": "^14.2.22",
    "react": "^18.3.1",
    "react-codemirror2": "^7.3.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.2",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-test-renderer": "^18.3.1",
    "sass": "^1.83.0",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1"
  }
}
