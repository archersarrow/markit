{
  "name": "markit",
  "version": "1.0.1",
  "productName": "MarkIt",
  "author": "Saketh kowtha",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saketh-kowtha/markit.git"
  },
  "scripts": {
    "next:dev": "cd src/renderer && next dev",
    "dev": "tauri dev",
    "clean": "rm -rf dist src/renderer/.next src/renderer/out node_modules/.cache src-tauri/target",
    "test": "jest --maxWorkers=4",
    "build": "npm run clean && tauri build",
    "build:mac": "tauri build --target universal-apple-darwin",
    "build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "tauri": "tauri",
    "analyze": "du -sh node_modules/* | sort -hr | head -20"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "codemirror": "^5.65.18",
    "fuse.js": "^7.1.0",
    "html-to-image": "^1.11.13",
    "katex": "^0.16.23",
    "mermaid": "^11.12.0",
    "next": "^14.2.22",
    "react": "^18.3.1",
    "react-codemirror2": "^7.3.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.2",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-test-renderer": "^18.3.1",
    "sass": "^1.83.0",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1"
  }
}
