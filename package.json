{
  "name": "markit",
  "version": "0.1.1",
  "productName": "MarkIt",
  "private": true,
  "main": "./src/electron/main.js",
  "scripts": {
    "dev": "next dev src/renderer",
    "clean": "rm -rf dist src/renderer/.next src/renderer/out",
    "test": "jest --maxWorkers=4",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac --windows --linux",
    "release": "npm t && electron-builder --mac --windows --linux --publish always"
  },
  "build": {
    "productName": "MarkIt",
    "mac": {
      "icon": "./electron/assets/markit.tiff"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Productivity",
      "icon": "./electron/assets/markit.tiff"
    },
    "win": {
      "icon": "./electron/assets/markit.tiff"
    },
    "asar": true,
    "files": [
      "src/electron",
      "src/renderer/out"
    ]
  },
  "dependencies": {
    "codemirror": "^5.58.2",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "next": "9.5.5",
    "react": "17.0.1",
    "react-codemirror2": "^7.2.1",
    "react-dom": "17.0.1",
    "react-markdown": "^5.0.2",
    "react-syntax-highlighter": "^15.3.0",
    "remark-gfm": "^1.0.0",
    "node-sass": "^4.14.1",
    "sass": "^1.28.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.26.6",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@testing-library/react-hooks": "^3.4.2",
    "babel-jest": "^26.6.3",
    "electron": "latest",
    "electron-builder": "latest",
    "jest": "^26.6.3",
    "react-test-renderer": "^17.0.1",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0"
  }
}
