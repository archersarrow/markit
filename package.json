{
  "name": "markit",
  "version": "0.1.0",
  "productName": "MarkIt",
  "private": true,
  "scripts": {
    "dev": "next dev renderer",
    "clean": "rm -rf dist renderer/.next renderer/out",
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "mac": {
      "icon": "./electron/assets/markit.tiff"
    },
    "asar": true,
    "files": [
      "electron",
      "renderer/out"
    ]
  },
  "main": "./electron/main.js",
  "dependencies": {
    "codemirror": "^5.58.2",
    "concurrently": "^3.5.0",
    "fibers": "^5.0.0",
    "next": "9.5.5",
    "node-sass": "^4.14.1",
    "react": "17.0.1",
    "react-codemirror2": "^7.2.1",
    "react-dom": "17.0.1",
    "react-markdown": "^5.0.2",
    "react-syntax-highlighter": "^15.3.0",
    "remark-gfm": "^1.0.0",
    "sass": "^1.28.0",
    "wait-on": "^2.0.2",
    "electron-store": "^6.0.1",
    "electron-next": "^3.1.5",
    "electron-is-dev": "^1.1.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest",
    "concurrently": "^3.5.0",
    "wait-on": "^2.0.2"
  }
}